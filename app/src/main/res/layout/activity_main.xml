<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logo" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:columnCount="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/btnMateri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_button"
                    android:drawableTop="@drawable/materi"
                    android:duplicateParentState="false"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Materi Pemebelajaran"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/btnGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:text="Permainan Edukatif"
                    android:textColor="#FFFFFF"
                    android:drawableTop="@drawable/game"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/btnEvaluasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:text="Evaluasi Pembelajaran"
                    android:textColor="#FFFFFF"
                    android:drawableTop="@drawable/evaluasi"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/btnStandarKompetensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:text="Standar Kompetensi"
                    android:textColor="#FFFFFF"
                    android:drawableTop="@drawable/standar_kompetensi"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

        </GridLayout>

</LinearLayout>
